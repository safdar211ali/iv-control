<div class="panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading">
<%- model_class = Category -%>
 <%= 'Show' %> | <%=t '.title', :default => model_class.model_name.human.titleize %>
  </div>

  <div class="panel-body">

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @category.name %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:created_at) %></dt>
    <dd><pre class="prettyprint"><%= @category.created_at %></pre></dd>
  </dl>
</div>

    <div class="col-md-8" style="padding-top: 20px; float: right;">
  <%= link_to categories_path(:page=>params[:page]), :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
  <% end %>
  <%= link_to edit_category_path(@category,:page=>params[:page]), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
  <% end %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
    </div>


