<%= form_for @siteuser, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :role, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :role,['new','admin'],{:prompt=>'Select admin role'}, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  siteusers_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
