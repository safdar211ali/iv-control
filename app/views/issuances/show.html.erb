<div class="panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading">
    <%- model_class = Issuance -%>
    <%= 'Show' %> | <%= t '.title', :default => model_class.model_name.human.titleize %>
    <div style="float: right;color: #888888;">Issued By : <%= @issuance.user.name %></div>
  </div>

  <div class="panel-body">

    <div class="fieldset col-md-6" style="float:left;">
      <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:item_id) %></dt>
        <dd>
          <pre class="prettyprint"><%= @issuance.item.name %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:expiry) %></dt>
        <dd>
          <pre class="prettyprint"><%= @issuance.expiry %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
        <dd>
          <pre class="prettyprint"><%= @issuance.description %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:created_at) %></dt>
        <dd>
          <pre class="prettyprint"><%= @issuance.created_at %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name('Issued') %></dt>
        <dd>
          <pre class="prettyprint"><%= pluralize(@issuance.qtyissued,@issuance.item.unit) %></pre>
        </dd>

      </dl>
    </div>
    <div class="fieldset col-md-6" style="float:left;">
      <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name('Present') %></dt>
        <dd>
          <pre class="prettyprint"><%= pluralize(@issuance.qtypresent,@issuance.item.unit) %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name('balance') %></dt>
        <dd>
          <pre class="prettyprint"><%= pluralize(@issuance.qtybalance,@issuance.item.unit) %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name('Single-qty') %></dt>
        <dd>
          <pre class="prettyprint"><%= pluralize(@issuance.qtysingle,@issuance.item.unit) %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name('Single-balance') %></dt>
        <dd>
          <pre class="prettyprint"><%= pluralize(@issuance.qtysingleb,@issuance.item.unit) %></pre>
        </dd>
        <dt class="label label-default"><%= model_class.human_attribute_name('Stock_Name') %></dt>
        <dd>
          <pre class="prettyprint"><%= @issuance.name %></pre>
        </dd>
      </dl>
    </div>
    <div class=" col-md-6 col-md-offset-3">
      <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:category_id) %></dt>
        <dd><pre class="prettyprint"><%= @issuance.category.blank? ? 'no category' : @issuance.category.name %></pre></dd>
      </dl>
    </div>
    <div class="col-md-8" style="padding-top: 20px; float: right;">
      <%= link_to issuances_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          Back
      <% end %>
      <%= link_to edit_issuance_path(@issuance), :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
      <% end %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  issuance_path(@issuance),
                  :method => 'delete',
                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                  :class => 'btn btn-danger' %>
    </div>
  </div>
</div>