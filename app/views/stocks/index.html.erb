<div class="page-header">
  <%= link_to new_stock_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Stock
  <% end %>
  <h1>Listing stocks</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Item name</th>
            <th>Qtyreceived</th>
            <th>Expiry</th>
            <th>Stock_name</th>
        <th>Actions</th>

      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @stocks) do |stock| %>
        <td><%= stock.item.name %></td>
            <td><%= stock.qtyreceived %></td>
            <td><%= stock.expiry %></td>
            <td><%= stock.present_stock %></td>
            <td><%= link_to 'Show', stock %>
        <%= link_to 'Edit', edit_stock_path(stock) %>
       <%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
