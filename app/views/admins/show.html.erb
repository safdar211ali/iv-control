<%- model_class = Admin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:username) %></dt>
      <dd><pre class="prettyprint"><%= @admin.username %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:password) %></dt>
      <dd><pre class="prettyprint"><%= @admin.password %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @admin.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @admin.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:display_name) %></dt>
      <dd><pre class="prettyprint"><%= @admin.display_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @admin.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:role) %></dt>
      <dd><pre class="prettyprint"><%= @admin.role %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admins_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_path(@admin), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_path(@admin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>