<!--single item-->
<% unless @item.blank? %>
    <div class="panel panel-info">
      <!-- Default panel contents -->
      <div class="panel-heading">
       <%= receiving %> Received Stock
      </div>
      <div class="panel-body">
        <table class="table table-hover table-condensed">
          <tr>
            <th><span class=" glyphicon glyphicon-hand-down">RECEIVED AT</span></th>
            <th><span class="glyphicon glyphicon-hand-down">RECEIVED BY</span></th>
            <th><span class=" glyphicon glyphicon-hand-down">QTY. RECEIVED </span></th>
          </tr>
          <tbody>
          <% n=0 %>
          <% n = n+1 %>
          <tr class="alert alert-info">
            <td>
              <%= n %>- <i>name</i> :<%= @item.name %>
            </td>
            <td>
              <i>cas no </i>:<%= @item.cas_no %>
            </td>
            <td></td>
          </tr>

          <% @item.received.each do |issue| %>
              <tr>
                <td><%= issue.created_at %></td>
                <td><%= issue.user.name %></td>
                <td><%= issue.tot %></td>
              </tr>
          <% end %>
          <tr>
            <td>

              <span class=" glyphicon glyphicon-hand-right label label-default ">SUM</span>

            </td>
            <td></td>
            <td>
              <strong>  <%= @item.received_sum %></strong>

            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
<% end %>

